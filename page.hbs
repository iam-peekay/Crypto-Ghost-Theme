{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{#post}}

<main id="site-main">
  <div class="container">
    <div class="inner">
      <article>
        <header class="post-header">
          <h1 class="post-title">{{title}}</h1>
        </header>

        <section class="post-content">
          {{content}}
        </section>
      </article>
    </div>
  </div>
</main>

{{/post}}
