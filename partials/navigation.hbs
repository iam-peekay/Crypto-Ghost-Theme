<ul class="nav" role="menu">
    {{#foreach navigation}}
    <li class="nav-{{slug}}{{#if current}} nav-current{{/if}}" role="menuitem"><a href="{{url absolute="true"}}">{{label}}</a></li>
    {{/foreach}}
    {{#if @member}}
        <li class="account-menu">
            <a href="javascript:" class="account-menu-avatar" id="account-menu" type="checkbox" name="menu">
                <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><g fill="#777777" fill-rule="evenodd"><path d="M3.513 18.998C4.749 15.504 8.082 13 12 13s7.251 2.504 8.487 5.998C18.47 21.442 15.417 23 12 23s-6.47-1.558-8.487-4.002zM12 12c2.21 0 4-2.79 4-5s-1.79-4-4-4-4 1.79-4 4 1.79 5 4 5z" fill="#FFF"/></g></svg>
                {{#if @member.avatar_image}}
                    <img src="{{@member.avatar_image}}" />
                {{/if}}
            </a>
            <ul class="account-menu-dropdown">
                <li class="account-info">
                    <small>{{t "Signed in as"}}</small>
                    <span class="account-email" title="{{@member.email}}">{{@member.email}}</span>
                </li>
                <li><a href="{{@site.url}}/account/">{{t "Account"}}</a></li>
                <li><a href="#signout" data-members-signout>{{t "Sign out"}}</a></li>
            </ul>
        </li>
    {{else}}
      {{#if @labs.members}}
        <li class="nav-membership"><a class="signin-link" href="{{@site.url}}/signin/">{{t "Sign in"}}</a></li>
        <li class="nav-membership"><a class="signup-link" href="{{@site.url}}/signup/">{{t "Sign up"}}</a></li>
      {{/if}}
    {{/if}}    
</ul>
